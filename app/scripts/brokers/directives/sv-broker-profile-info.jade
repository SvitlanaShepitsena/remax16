        div(layout='row' layout-sm="column" layout-align="top center")
            div(flex-gt-sm="50")
                div(ng-if='hasEditAccess')
                    button.btn.btn--xs.btn--black.btn--raised.bgc-grey-300.tc-grey-600.mt(lx-ripple='' ng-click="showBrokerProfileHighlightsModal(broker)" )
                        i.fa.fa-pencil.fa-fw &nbsp
                        | Edit
                div(ng-if='!editState')
                    .fs-body-2 {{broker.highlight1}}
                    .fs-body-2 {{broker.highlight2}}
                    .fs-body-2 {{broker.highlight3}}
                    .fs-body-2 {{broker.highlight4}}
                    .fs-body-2 {{broker.highlight5}}
                    .fs-body-2 {{broker.highlight6}}
                    .fs-body-2 {{broker.highlight7}}
            div(flex-gt-sm='50')
                div(ng-if='hasEditAccess')
                    button.btn.btn--xs.btn--black.btn--raised.bgc-grey-300.tc-grey-600.mt(lx-ripple='' ng-click="showBrokerProfInfoModal(broker)" )
                        i.fa.fa-pencil.fa-fw &nbsp
                        | Edit
                .fs-subhead(ng-if='!editState')
                    span Languages: &nbsp
                    span.fs-body-1  {{broker.languages}}
                .fs-subhead(ng-if='!editState')
                    span Years of Experience: &nbsp
                    span.fs-body-1 {{broker.yearsexperience}}
                .fs-subhead(ng-if='!editState')
                    span Specialities: &nbsp
                    span.fs-body-1 {{broker.specialities}}
                .fs-subhead(ng-if='!editState')
                    span Areas Served: &nbsp
                    span.fs-body-1 {{broker.areasserved}}
        div
            div(ng-if='hasEditAccess')
                button.btn.btn--xs.btn--black.btn--raised.bgc-grey-300.tc-grey-600.mt(lx-ripple='' ng-click="showBrokerExperienceModal(broker)" )
