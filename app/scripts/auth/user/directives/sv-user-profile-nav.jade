.card.bgc-grey-100.top-profile-nav
    ul.list-unstyled(layout='row' layout-align="space-between center")
        li(ui-sref-active='sv-active-user-menu')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.listings' lx-ripple='' style='font-size:11px;padding:0px 10px' id="myListings")
                i.mdi.mdi-view-list &nbsp
                span(hide-sm) Listings
        li(ui-sref-active='sv-active-user-menu')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.news.articles' lx-ripple='' style='font-size:11px;padding:0px 10px' id="myArticles")
                i.mdi.mdi-view-list &nbsp
                span(hide-sm) Blog
        li(ui-sref-active='sv-active-user-menu')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.dashboard' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.mdi.mdi-view-dashboard &nbsp
                span(hide-sm) Public Profile
        li(ui-sref-active='sv-active-user-menu' ng-if='user.isEditor()')
            a.btn.btn--m.btn--grey.tc-grey-700.btn--flat(ui-sref='app.user.homepage-rank' lx-ripple='' style='font-size:11px;padding:0px 10px')
                i.mdi.mdi-format-list-numbers &nbsp
                span(hide-sm) Articles ranking
