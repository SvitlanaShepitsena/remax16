/**********************
  =Styles for Text Editor
***********************/
p
  width 100%
  img
    margin 0px auto
    padding 8px

.md-input-container-article
  padding-bottom 8px

.secondNewsMargin:nth-child(odd)
  padding-right 8px

.secondNewsMargin:nth-child(even)
  padding-left 8px !important

.search-filter__cancel
.search-filter__label
  color #757575 !important

.sv-select-container
  margin-top 8px
  padding-bottom 0px !important

.md-select-article
  padding 0px !important

.md-select-listing
  margin 0px !important
  padding 0px 4px 0px 10px !important
  md-select-value
    color #1976D2 !important
    font-weight 500 !important

.notice-red
  color orangered
  font-style italic
  font-size small
  margin-top -20px
  margin-bottom 20px

.sv-label-counter
  margin-left 4px
  font-weight bold
  padding 2px 4px
  color #9E9E9E
  font-size 11px

//.author-article-nav
//  backround-color none !important
//  background transparent !important
//  height auto

.article-thumb-link
  text-decoration none
  cursor pointer
  line-height 14px
  &:hover
  &:active
  &:focus
    text-decoration none !important

.sv-article-thumb
  border-bottom 1px rgba(0, 0, 0, 0.117647) solid
  padding-bottom 8px

.sv-article-thumb:nth-last-child(1)
  border-bottom none !important

.article-thumb-body
  line-height 16px

.article-thumb-title
  line-height 20px

.article-thumb-author
  line-height 16px

.radio-body
  line-height 16px
  font-weight 600

.radio-subhead
  line-height 20px
  font-weight 600
  margin-bottom 4px

.sv-responsive-button
  @media screen and (max-width: 450px)
    font-size 9px !important

.sv-img-thumb
  text-align center
  vertical-align middle

.sv-img-thumb-link
  display block
  background-repeat no-repeat
  background-position-x 50%
  background-position-y 50%
  background-size 85px 85px !important

/*visited link*/
.sv-link-visited-image
  opacity .8 !important

.sv-link-visited:visited
.sv-link-visited.link:visited
  color #757575 !important

.ta-scroll-window
  textarea
    width 100% !important

/*SV-SVET-PAD*/
.md-input.ta-bind.ta-html.ta-editor
  background-color #e0e0e0
  width 100% !important
  padding-top: 10px !important;
  padding-bottom: 40px !important;
