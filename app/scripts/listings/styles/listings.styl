    max-height 260px !important
  }
  @media screen and (max-width: 350px) {
    max-height 220px !important
  }

.flex-control-nav
  @media screen and (max-width: 450px) {
    visibility hidden
  }

.img-flex-slider
  padding 8px 0px
  margin 0px auto
  width auto !important
  max-height 500px !important
