.card(class='mb pb++')
    .bgc-grey-200(layout-gt-sm='row' layout-sm="column" layout-align-gt-sm='space-between center' class='pt+ pb+ pl pr')
        .fs-title.mb.tc-grey-700
            i.mdi.mdi-account &nbsp
            | Log In
        sv-form-social-buttons
    div(class='pl pr')
        form.mt(name="loginForm"  novalidate sv-form-val)
            md-input-container(class='')
                label {{'email'|translate}}
                input(name="email" type='text', ng-model='user.email' required)
            md-input-container(class='')
                label {{'password'|translate}}
                input(name="password" type='password', ng-model='user.password' required)
            div(layout='row' layout-align-sm="space-between center")
                div(class='m')
                    button.btn.btn--s.btn--raised.btn--blue.bgc-blue-A200(lx-ripple ng-click='singIn()' id="svetLoginBtn")
                        i.mdi.mdi-login &nbsp
                        | {{loginBtn|translate}}
                div(class='m')
                    sv-forgot-pass
    div.text-center.mt
        span.fs-subhead.tc-grey-700 Don't have an account?
        a.btn.btn--xs.btn--blue.btn--flat(lx-ripple='' ui-sref='app.sign-up') Please Sign Up

