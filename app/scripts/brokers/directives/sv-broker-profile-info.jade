div
    div(ng-if='!editState')
        div(ng-if='hasEditAccess')
            button.btn.btn--xs.btn--black.btn--raised.bgc-grey-300.tc-grey-600.mt(lx-ripple='' ng-click="showBrokerAccreditationModal(broker)" )
                i.fa.fa-pencil.fa-fw &nbsp
                | Edit
        div
            .fs-subhead {{broker.accreditation}}
