div
    form(name='listingForm' flow-init novalidate sv-form-val )
        div(layout='row' layout-align='start center')
            div
                sv-profile-title.ml(header-title='New Listing')
            div
                button.btn.btn--s.btn--blue.btn--raised.ml.mr(lx-ripple='' ng-disabled="listingForm.$pristine" ng-click='saveListing(listing)')
                    i.fa.fa-save.fa-fw &nbsp
                    span.ml Save Listing
                button.btn.btn--s.btn--white.btn--raised.ml.mr(lx-ripple=''  ng-disabled="listingForm.$pristine")
                    i.fa.fa-close.fa-fw &nbsp
                    span.ml Cancel
        md-tabs.card.bgc-grey-50(md-selected='listingTabIndex' md-dynamic-height="" md-stretch-tabs="never" style='min-height:230px' md-autoselect md-border-bottom)
            md-tab(md-on-select="switchTab(1)" )
                md-tab-label 1. Info
                md-tab-body
                    sv-form-info
            md-tab(md-on-select="switchTab(2)")
                md-tab-label 2. Description
                md-tab-body.pb
                    sv-form-description
            md-tab(md-on-select="switchTab(3)")
                md-tab-label 3. Interior
                md-tab-body
                    sv-form-interior
            md-tab(md-on-select="switchTab(4)")
                md-tab-label 4. Exterior
                md-tab-body
                    sv-form-exterior
            md-tab(md-on-select="switchTab(5)")
                md-tab-label 5. Utilities
                md-tab-body
                    sv-form-utilities
            md-tab(md-on-select="switchTab(6)")
                md-tab-label 6. Taxes
                md-tab-body
                    sv-form-taxes
            md-tab(md-on-select="switchTab(7)")
                md-tab-label 7. Public Facts
                md-tab-body
                    sv-form-public-facts
            md-tab(md-on-select="switchTab(8)")
                md-tab-label 8. Photos
                md-tab-body
                    sv-form-photos


